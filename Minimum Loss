def minimumLoss(price):
    n = len(price)
    prices_with_years = [(p, i) for i, p in enumerate(price)]
    prices_with_years.sort()
    
    min_loss = float('inf')
    
    for i in range(1, n):
        high_price, high_year = prices_with_years[i]
        low_price, low_year = prices_with_years[i-1]
        if high_year < low_year:
            loss = high_price - low_price
            if loss < min_loss:
                min_loss = loss
                
    return min_loss
